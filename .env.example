
# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-very-secret-key-here-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///chronostories.db

# Server Configuration
SERVER_NAME=localhost:40268
APPLICATION_ROOT=/
PREFERRED_URL_SCHEME=http

# Required API Keys
GEMINI_API_KEY=your-gemini-api-key-here
GNEWS_API_KEY=your-gnews-api-key-here

# Optional API Keys (for additional AI providers)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Scraping Configuration
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
MAX_SCRAPE_THREADS=5
SCRAPING_DELAY=2

# AI Configuration
DEFAULT_AI_PROVIDER=gemini
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image-preview
TEXT_GENERATION_MODEL=gemini-pro

# Story Generation Configuration
STORIES_PER_BATCH=3
MAX_STORY_LENGTH=500
MIN_STORY_LENGTH=100

# Security Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30

# Development Configuration
DEBUG=True
TESTING=False
